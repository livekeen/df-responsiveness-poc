mixin section-container(title, hasMore, hasAdd)
  section.mt-4.pb-4
    if title
      header.section-header.relative.flex.justify-between.items-center.mb-3.border-b.border-gray-300
        +h3(title, "font-bold")
        if hasMore || hasAdd
          .header__actions
            if hasMore
              a(class="actions__item text-primary hover:underline" href="#") All (2)
            if hasAdd
              button.header__action
                img(src="toolbar-add.svg" alt="Add" + " " + title)
    .content
      block

mixin section-content(title, hasEdit, hasDelete)
  -
    const hasActions = (hasEdit || hasDelete) ? "pr-12 relative" : ""

  div(class="content__item" + " " + hasActions)
    block
    if hasActions
      div.content__actions
        if hasEdit
          button.content__action
            img(src="toolbar-edit.svg" alt="Edit" + " " + title)
        if hasDelete
          button.content__action
            img(src="toolbar-delete.svg" alt="Delete" + " " + title)